<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="radiobutton.giovanivani.com.radiobutton.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="@string/comida_preferida"
        android:textSize="@dimen/comida_preferida" />

    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:id="@+id/radioGroupId">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lasanhaId"
            android:layout_weight="1"
            android:text="Lasanha" />

        <RadioButton
            android:text="Parmegiana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/parmegianaId"
            android:layout_weight="1" />

        <RadioButton
            android:text="MacarrÃ£o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/macarraoId"
            android:layout_weight="1" />
    </RadioGroup>

    <Button
        android:text="@string/botao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botaoEscolherId" />

    <TextView
        android:text="@string/comida_escolhida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textoExibicaoId"
        android:textSize="@dimen/comida_preferida" />

</LinearLayout>
